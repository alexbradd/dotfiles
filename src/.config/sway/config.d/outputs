### Output configuration
# Modes are configured inside kanshi
output * bg ~/Pictures/Wallpapers/pixels-d.webp fill

set $eDP_refresh_rate_mode "<b>Choose RR for eDP-1</b>: 165Hz(h), 40Hz(l)"
mode --pango_markup $eDP_refresh_rate_mode {
  bindsym h mode "default", output eDP-1 mode 2560x1440@165.003Hz
  bindsym l mode "default", output eDP-1 mode 2560x1440@40.002Hz

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym ctrl+alt+s mode $eDP_refresh_rate_mode

# TODO
bindsym $mod+p output eDP-1 toggle
