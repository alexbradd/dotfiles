# Nightlight
set $nightlight_cmd wlsunset -t 3000 -T 6500 -l 45.5 -L 9.2
set $nightlight_mode "<b>Nightlight</b>: (e)nable, (d)isable"
mode --pango_markup $nightlight_mode {
  bindsym e mode "default", exec '[ -z $(pgrep -x wlsunset) ] && $nightlight_cmd'
  bindsym d mode "default", exec 'killall wlsunset'

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+alt+n mode $nightlight_mode

# vim: set ft=swayconfig:
