# Nightlight
set $nightlight_cmd wlsunset -t 3000 -T 6500 -l 45.5 -L 9.2
set $nightlight_mode "Nightlight"
mode --pango_markup $nightlight_mode {
  bindsym {
    e mode "default", exec '[ -z $(pgrep -x wlsunset) ] && { $nightlight_cmd & } && pkill -RTMIN+2 waybar'
    d mode "default", exec 'killall wlsunset && pkill -RTMIN+2 waybar'
  }
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+alt+l mode $nightlight_mode
exec $nightlight_cmd

# vim: set ft=swayconfig:
