### Input configuration
input type:touchpad {
  dwt enabled
  tap enabled
  middle_emulation enabled

  natural_scroll disabled
  scroll_method two_finger

  accel_profile flat
}

input 2362:597:UNIW0001:00_093A:0255_Touchpad {
  pointer_accel 0.7
}

input 1133:16500:Logitech_G305 {
  pointer_accel 0
}

input type:keyboard {
  xkb_layout us
  xkb_options compose:ralt
  xkb_numlock enabled
}

bindgesture swipe:3:left  workspace prev_on_output
bindgesture swipe:3:right workspace next_on_output
bindsym ctrl+$mod+left  workspace prev_on_output
bindsym ctrl+$mod+right workspace next_on_output

bindgesture swipe:4:right focus output right
bindgesture swipe:4:left  focus output left
bindgesture swipe:4:up    focus output up
bindgesture swipe:4:down  focus output down
bindsym ctrl+shift+$mod+right focus output right
bindsym ctrl+shift+$mod+left  focus output left
bindsym ctrl+shift+$mod+up    focus output up
bindsym ctrl+shift+$mod+down  focus output down

