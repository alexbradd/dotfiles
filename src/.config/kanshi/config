profile Dock {
  output eDP-1                       position 0,0
  output 'AOC CU34V5C UPJN6HA000565' position 2048,0

  exec ~/.local/bin/toggle-dock.sh on
  exec ~/.local/bin/multidisplay-notifications.sh on
  exec notify-send 'System' 'Home dock mode'
}

profile Whatever {
  output eDP-1 position 0,0
  output *

  exec ~/.local/bin/toggle-dock.sh on
  exec ~/.local/bin/multidisplay-notifications.sh off
  exec notify-send 'System' 'Unknown output, please configure manually'
}

profile Single {
  output eDP-1 position 0,0

  exec ~/.local/bin/toggle-dock.sh off
  exec ~/.local/bin/multidisplay-notifications.sh off
  exec notify-send 'System' 'Single display mode'
}
